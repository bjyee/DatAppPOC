<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>What</th>
      <th>When</th>
      <th>Why</th>
      <th>Where</th>
      <th>Who created</th>
      <th>Datetime created</th>
      <th>Who updated</th>
      <th>Datetime updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.group_id %></td>
        <td><%= event.what %></td>
        <td><%= event.when %></td>
        <td><%= event.why %></td>
        <td><%= event.where %></td>
        <td><%= event.who_created %></td>
        <td><%= event.datetime_created %></td>
        <td><%= event.who_updated %></td>
        <td><%= event.datetime_updated %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

