<%= form_for [@group,@event] do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group col-lg-12">
  	<div  class='col-lg-12'>
    	<%= f.label :what, "Name" %>
  	</div>
  	<div  class='col-lg-12'>
  	  <%= f.text_field :what, :class => 'form-control' %>
  	</div>
  </div>
  <div class="form-group col-lg-12">
    <div class='col-lg-12'>
    	<%= f.label "Date" %>
    </div>
    <div class='col-lg-4'>
	    Start
	    <%= f.date_field :startDate, :value => @startDate, :class => 'form-control' %>
    </div>
    <div class='col-lg-3'>
    	&nbsp;
		<%= f.text_field :startTime, :value => @startTime, :class => 'form-control'%>
    </div>
    <div class="clearfix visible-lg-block"></div>
    <div class='col-lg-4'>
	    End
	    <%= f.date_field :endDate, :value => @endDate, :class => 'form-control' %>
    </div>
    <div class='col-lg-3'>
    	&nbsp;
		<%= f.text_field :endTime, :value => @endTime, :class => 'form-control'%>
    </div>
    <div class="clearfix view visible-lg-block"></div>
  </div>
  <div class="form-group col-lg-12">
  	<div  class='col-lg-12'>
  	  <%= f.label "Location" %>
  	</div>
    <div class='col-lg-12'>
    	<%= f.text_field :where, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group col-lg-12">
  	<div  class='col-lg-12'>
    	<%= f.label :why, "Description" %>
  	</div>
  	<div  class='col-lg-12'>
  	  <%= f.text_area :why, :class => 'form-control' %>
  	</div>
  </div>
  <div class="form-group pull-right">
    <%= link_to 'Cancel', group_path(@group.id), :class => 'btn btn-default'%>
  	<%= f.submit "Create Event", :class => 'btn btn-primary' %>
  </div>
<% end %>
