<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group col-lg-12">
  	<div  class='col-lg-12'>
    	<%= f.label :what, "Name" %>
  	</div>
  	<div  class='col-lg-12'>
  	  <%= f.text_field :what, :class => 'form-control' %>
  	</div>
  </div>
  <div class="form-group col-lg-12">
  	<div  class='col-lg-12'>
    	<%= f.label :why, "About" %>
  	</div>
  	<div  class='col-lg-12'>
  	  <%= f.text_area :why, :class => 'form-control' %>
  	</div>
  </div>
  <div class="form-group col-lg-12">
    <div class='col-lg-12'>
    	<%= f.label "Date" %>
    </div>
    <div class='col-lg-4'>
	    Start
	    <%= f.date_field :startDate, :value => @startDate, :class => 'form-control' %>
    </div>
    <div class='col-lg-3'>
    	&nbsp;
		<%= f.text_field :startTime, :value => @startTime, :class => 'form-control'%>
    </div>
    <div class="clearfix visible-lg-block"></div>
    <div class='col-lg-4'>
	    End
	    <%= f.date_field :endDate, :value => @endDate, :class => 'form-control' %>
    </div>
    <div class='col-lg-3'>
    	&nbsp;
		<%= f.text_field :endTime, :value => @endTime, :class => 'form-control'%>
    </div>
    <div class="clearfix view visible-lg-block"></div>
  </div>
  <div class="form-group col-lg-12">
  	<div  class='col-lg-12'>
  	  <%= f.label "Location" %>
  	</div>
    <div class='col-lg-12'>
    	Address Line 1
    	<%= f.text_field :address1, :value => @address1, :class => 'form-control' %>
    </div>
    <div class='col-lg-12'>
    	Address Line 2
    	<%= f.text_field :address2, :value => @address2, :class => 'form-control' %>
    </div>
    <div class='col-lg-5'>
    	City
    	<%= f.text_field :city, :value => @city, :class => 'form-control' %>
    </div>
    <div class='col-lg-2'>
    	State
    	<%= f.text_field :state, :value => @state, :class => 'form-control' %>
    </div>
    <div class='col-lg-5'>
    	Zip Code
    	<%= f.text_field :zip, :value => @zip, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group pull-right">
    <%= link_to 'Cancel', groups_path, :class => 'btn btn-default'%>
  	<%= f.submit "Create Event", :class => 'btn btn-primary' %>
  </div>
<% end %>
