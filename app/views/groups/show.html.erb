<div class="contentWrapper col-xs-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1" >
	<%= stylesheet_link_tag    'group_show' %>
	<%= javascript_include_tag 'group_show' %>
	
	<div class="col-lg-12">
		<div class="col-lg-12">
			<div class="page-header" style="margin-top:0px">
				<h2>
					<%= @group.name %>
					<small>Details</small>
				</h2>
			</div>
		</div>
		<div class="col-lg-8">
			<div class="panel panel-default">
				<div class="panel-heading">
					Details
				</div>
				<div class="panel-body">
					<div class="groupDescription col-lg-12">
						<div class="col-lg-3">
							<strong>About</strong>
						</div>
						<div class="col-lg-9">
							<div class="help-block">
								<%= @group.description %>
							</div>
						</div>
					</div>
					<div class="groupCreatedBy col-lg-12">
						<div class="col-lg-3">
							<strong>Created By</strong>
						</div>
						<div class="col-lg-9">
							<div class="help-block">
								<%= @groupCreator %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
					Events
				</div>	
				<div class="panel-body">
					<% if @events.length > 0 %>
					<% else %>
						There are currently no events happening.
					<% end %>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
					Comments
				</div>	
				<div class="panel-body">
					There are currently no comments. 
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					Members
				</div>	
				<div class="panel-body">
					<% @members.each do |m| %>
						<div class="groupMember">
							<%= link_to m.user.firstname+" "+m.user.lastname, user_path(m.id) %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>	
</div>
