<!-- Just for this page -->
<%= stylesheet_link_tag    'landing_index' %>
<%= javascript_include_tag 'landing_index' %>

<body>
  <div id="scrollBody" class="col-lg-12 introSection">
    <div id="intro_welcome" class="col-lg-12 introSection">
      <!-- Youtube Vid on how awesome we are. Or maybe some kind of slideshow. -->
      <div class="borderbox col-xs-12 col-lg-10 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
        Slideshow here
      </div>
    </div>
    <div id="intro_desc" class="col-lg-12 introSection">
      <!-- Description -->
      <div class="borderbox col-xs-12 col-lg-10 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
        Description Of DAT App Tho
      </div>
    </div>
    <div id="intro_features" class="col-lg-12 introSection">
      <!-- Features -->
      <div class="borderbox col-xs-12 col-lg-10 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
        Features of DAT App Tho
      </div>
    </div>
    <div id="intro_signup" class="col-lg-12 introSection">
      <!-- Signup -->
      <div class="borderbox col-xs-12 col-lg-10 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
        <div class="signup_box_space col-sm-12 col-lg-6">

        </div>
        <div class="signup_box col-sm-12 col-lg-6">
          <h2>Sign up now</h2>
          <%= form_tag users_path do %>
            <div id="signup_name" class="signup-div col-lg-12">
              <%= text_field_tag "user[firstname]", nil, :placeholder => "First Name", :class => "half-field signup-field form-control", :style => "float:left" %>
              <%= text_field_tag "user[lastname]", nil, :placeholder => "Last Name", :class => "half-field signup-field form-control" %>
            </div>
            <div id="signup_email" class="signup-div col-lg-12">
              <%= text_field_tag "user[email]", nil, :placeholder => "Email", :class => "full-field signup-field form-control" %>
            </div>
            <div id="signup_password" class="signup-div col-lg-12">
              <%= password_field_tag "user[password]", nil, :placeholder => "New Password", :class => "full-field signup-field form-control" %>
            </div>
            <div id="signup_password_confirmed" class="signup-div col-lg-12">
              <%= password_field_tag "user[password_confirmation]", nil, :placeholder => "Confirm New Password", :class => "full-field signup-field form-control" %>
            </div>
            <div id="signup_submit" class="signup-div col-lg-12">
              <%= hidden_field_tag "user[is_admin]", false %>
              <%= hidden_field_tag "user[is_editor]", false %>
              <%= hidden_field_tag "user[is_viewer]", false %>
              <%= button_tag "Sign Up", class: "btn btn-primary signup-submit-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </body>
<script>
  dat_landing.init();
</script>
